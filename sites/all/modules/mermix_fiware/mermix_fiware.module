<?php

function mermix_fiware_init() {
	drupal_add_js('jQuery(document).ready(function () { 
	if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(savePosition);
    }
	});
	function savePosition(position) {
		jQuery.cookie("geolocation",position.coords.latitude +","+position.coords.longitude);
	}
	', 'inline');
}

function mermix_fiware_node_update($node) {

	require_once('orion_fw/autoloader/autoloader.php');
	
	$OrionContextBroker = new Orion\ContextBroker("127.0.0.1");
}